  </PropertyGroup>
  <ItemGroup>
    <SlnGenCustomProjectTypeGuid Include=".ilproj" ProjectTypeGuid="{9A19103F-16F7-4668-BE54-9A1E7A4F7556}" />
  </ItemGroup>
</Project>
